<div class="row">
  <% movies.each do |movie| %>
    <div class="col-lg-3 col-md-4 col-sm-6 py-3 d-flex align-items-stretch justify-content-center">
      <div class="card">
        <img src="<%=movie[:poster_url]%>" class="card-img-top" alt="poster">
        <div class="card-body">
          <p class="card-title"><%= movie[:title] %> (<%= movie[:year] %>)</p>
          <%= simple_form_for([@list, @movie]) do |f| %>
            <%= f.hidden_field :title, value: movie[:title] %>
            <%= f.hidden_field :poster_url, value: movie[:poster_url] %>
            <%= f.hidden_field :year, value: movie[:year] %>
            <button type="submit" class="btn plus">
              <i class="fas fa-plus"></i>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
