<%= @list.name %>
<%= link_to "Add a movie", new_list_bookmark_path(@list.id) %>

<% @bookmarks.each do |bookmark| %>
  <% movie_id = bookmark.movie_id %>
  <% movie = Movie.find(movie_id) %>

  <div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="<%= movie.poster_url %>" alt="poster">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <small><%= bookmark.comment %></small>
          <button class="btn btn-primary"><%= link_to "Delete", bookmark_path(bookmark.id), method: "delete" %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
