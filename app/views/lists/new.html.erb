<div class="background secondary">
  <%= render "shared/navbar" %>
  <div class="form-container">
    <h2>Create a new watchlist</h2>

    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name, input_html: { autocomplete: 'off' } %>
      <%= f.input :comment, input_html: { autocomplete: 'off' } %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create", class: 'btn btn-block btn-secondary' %>
    <% end %>

    <%= link_to "Back", root_path, class:"btn btn-block btn-outline-secondary" %>
  </div>
</div>
